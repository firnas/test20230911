{% extends 'base.html.twig' %}

{% block title %}Vehicle{% endblock %}

{% block body %}
<div class="col-8 text-center">

<h1>Vehicle</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ vehicle.id }}</td>
            </tr>
            <tr>
                <th>Brand</th>
                <td>{{ vehicle.Brand }}</td>
            </tr>
            <tr>
                <th>Model</th>
                <td>{{ vehicle.Model }}</td>
            </tr>
            <tr>
                <th>Plate</th>
                <td>{{ vehicle.Plate }}</td>
            </tr>
            <tr>
                <th>LicenseRequired</th>
                <td>{{ vehicle.LicenseRequired }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_vehicle_index') }}">back to readme</a>

    <a href="{{ path('app_vehicle_edit', {'id': vehicle.id}) }}">edit</a>

    {{ include('vehicle/_delete_form.html.twig') }}
</div>
{% endblock %}

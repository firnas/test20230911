{% extends 'base.html.twig' %}

{% block title %}Trip{% endblock %}

{% block body %}
<div class="col-8 text-center">

<h1>Trip</h1>

    <table class="table">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ trip.id }}</td>
        </tr>
        <tr>
            <th>Vehicle</th>
            <td>{{ trip.Vehicle.id }} - {{ trip.Vehicle.plate }}</td>
        </tr>
        <tr>
            <th>Driver</th>
            <td>{{ trip.Driver.id }} - {{ trip.Driver.name }} {{ trip.Driver.surname }}</td>
        </tr>
        </tbody>
    </table>

    <a href="{{ path('app_index') }}">back to readme</a>

    <a href="{{ path('app_trip_edit', {'id': trip.id}) }}">edit</a>

    {{ include('trip/_delete_form.html.twig') }}
